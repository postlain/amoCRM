#bitrix
	display none
a:-webkit-any-link
	text-decoration: none

a:hover
	border-bottom: 1px solid #e74c3c

a:active
	color white
body
	background-color #2980b9
	//3498db
.block1
	display flex
	flex-direction: column
	align-items: center
	justify-content: space-between


.background
	background-color: #3a485f
	background-position: 50% 50%
	background-repeat: no-repeat
	border-width: 1px
	background-image: url(../images/background_block1.png)
	capture: on
	container: on
	background-size: cover
	height: 800px
	width: 100%
	z-index: 1
	parallax: on
	background-attachment: fixed
	fullcover: on
	left: 0
	top: 0

.top_menu_container
	background-color: rgba(45, 63, 81, 0.61)
	height: 54px
	width: 100%
	display flex
	justify-content: space-between

.item_menu_container
	width 550px
	display flex
	flex-direction: row
	align-items: center
	justify-content: space-around

.text_in_menu
	display flex
	flex-direction: column
	font-family: Calibri
	font-size 17pt
	color #ecf0f1

.center_container
	width 800px
	height 250px
	display flex
	flex-direction: column
	margin: auto
	align-items: center
	justify-content: space-around
	background-image: url(../images/dots_mini.png)


.text_header
	font-family: Calibri
	font-size 26pt
	color #ecf0f1

.img_underline
	margin-top -20px
	width 150px
	height 6px

.button
	background #7dc17a
	width 418px
	height 48px
	-webkit-border-radius: 10px
	-moz-border-radius 10px
	border-radius 10px
	container: on
	overflow: hidden
	box-shadow  0 3px 1px rgba(0, 0, 0, 0.16)
	display flex
	flex-direction: column
	align-items: center
	justify-content: center


.button:active
	background-color: #9ad849
	box-shadow  0 3px 1px rgba(0, 0, 0, 0.1)

.text_in_button
	font 'Open Sans'
	font-size 17pt
	color #fefefe

.img_decor_line
	width 100%
	height 43px
	background-image url(../images/decor_line.png)

.center_block1
	align-items: center


